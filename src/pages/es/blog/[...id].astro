---
import { render, type CollectionEntry } from 'astro:content'

import { getBlogCollection, sortMDByDate } from 'astro-pure/server'
import PostLayout from '@/layouts/BlogPost.astro'

export const prerender = true

export async function getStaticPaths() {
  const allPosts = await getBlogCollection()
  // Filter only Spanish blog posts
  const posts = sortMDByDate(
    allPosts.filter(
      (post): post is CollectionEntry<'blog'> =>
        post.collection === 'blog' && post.data.language === 'es'
    )
  )
  
  return posts.map((post) => {
    // Since we filtered for blog collection, we can safely access slug
    const slug = 'slug' in post.data ? post.data.slug : undefined
    return {
      params: { id: slug || post.id },
      props: { post, posts }
    }
  })
}

type Props = {
  post: CollectionEntry<'blog'>
  posts: CollectionEntry<'blog'>[]
}

const { post, posts } = Astro.props
const { Content, headings, remarkPluginFrontmatter } = await render(post)
---

<PostLayout {post} {posts} {headings} {remarkPluginFrontmatter}>
  <Content />
</PostLayout>
