---
import type { CollectionEntry, CollectionKey } from 'astro:content'

import { cn } from '../../utils'

type Props = {
  id: string
  collections: CollectionEntry<CollectionKey>[]
  class?: string
}

const { id, collections, class: className } = Astro.props
const lang = Astro.url.pathname.split('/')[1] // Get 'en' or 'es'

// Normalize the comparison - use slug if available, otherwise use last part of id
const normalizeId = (entry: CollectionEntry<CollectionKey>) => {
  if ('slug' in entry.data && entry.data.slug) {
    return entry.data.slug as string
  }
  const parts = entry.id.split('/')
  return parts[parts.length - 1].replace(/\.mdx?$/, '')
}

const normalizedCurrentId = id.replace(/\.mdx?$/, '')

const index = collections.findIndex((x) => normalizeId(x) === normalizedCurrentId)
const prev = collections[index - 1]
const next = collections[index + 1]

// Debug - remove this after fixing
console.log('Current ID:', normalizedCurrentId)
console.log('Index found:', index)
console.log('Collections:', collections.map(c => ({ id: c.id, slug: c.data.slug, normalized: normalizeId(c) })))

const getHref = (entry: CollectionEntry<CollectionKey>) => {
  const slug = normalizeId(entry)
  return `/${lang}/blog/${slug}` // AQUÍ está el cambio importante - siempre incluye /blog/
}
---

<div class={cn('flex max-sm:flex-col sm:justify-between gap-2', className)}>
  <span class='min-w-0'>
    {
      prev && (
        <a
          href={getHref(prev)}
          class='group inline-flex items-center gap-x-2 rounded-xl px-4 py-2 no-underline transition-colors duration-300 hover:bg-muted max-sm:max-w-[80%] sm:flex'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='20'
            height='20'
            viewBox='0 0 24 24'
            fill='none'
            stroke-width='2.5'
            stroke-linecap='round'
            stroke-linejoin='round'
            class='shrink-0 rotate-180 stroke-muted-foreground transition-colors group-hover:stroke-primary'
          >
            <line
              x1='5'
              y1='12'
              x2='19'
              y2='12'
              class='translate-x-4 scale-x-0 transition-all duration-300 ease-in-out group-hover:translate-x-1 group-hover:scale-x-100'
            />
            <polyline
              points='12 5 19 12 12 19'
              class='translate-x-0 transition-all duration-300 ease-in-out group-hover:translate-x-1'
            />
          </svg>
          <p class='truncate font-medium transition-colors'>{prev.data.title}</p>
        </a>
      )
    }
  </span>

  <span class='min-w-0'>
    {
      next && (
        <a
          href={getHref(next)}
          class='group inline-flex items-center gap-x-2 rounded-xl px-4 py-2 text-right no-underline transition-colors duration-300 hover:bg-muted max-sm:float-end max-sm:max-w-[80%] sm:flex'
        >
          <p class='truncate font-medium transition-colors'>{next.data.title}</p>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='20'
            height='20'
            viewBox='0 0 24 24'
            fill='none'
            stroke-width='2.5'
            stroke-linecap='round'
            stroke-linejoin='round'
            class='shrink-0 stroke-muted-foreground transition-colors group-hover:stroke-primary'
          >
            <line
              x1='5'
              y1='12'
              x2='19'
              y2='12'
              class='translate-x-4 scale-x-0 transition-all duration-300 ease-in-out group-hover:translate-x-1 group-hover:scale-x-100'
            />
            <polyline
              points='12 5 19 12 12 19'
              class='translate-x-0 transition-all duration-300 ease-in-out group-hover:translate-x-1'
            />
          </svg>
        </a>
      )
    }
  </span>
</div>
